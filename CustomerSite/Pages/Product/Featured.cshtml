@page
@using Shared.Clients
@model CustomerSite.Pages.Product.Featured
@{
    ViewData["Title"] = "Sản phẩm đặc trưng";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nông sản Bảo Lâm | nông sản sạch cho mọi nhà</title>

    <!-- Custom StyleSheet -->
    <link rel="stylesheet" href="~/css/styles.css" />

    <!-- Box icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.8.0/gsap.min.js" integrity="sha512-eP6ippJojIKXKO8EPLtsUMS+/sAGHGo1UN/38swqZa1ypfcD4I0V/ac5G3VzaHfDaklFmQLEs51lhkkVaqg60Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</head>
<body>
    <div class="__page pt-5">
        <div class="__content-wrap py-5">
            <nav class="__nav __nav-shadow">
                <div class="__navigation __container">
                    <div class="__logo">
                        <a style="display: flex; align-items: center;" asp-controller="Home" asp-action="Index">
                            <img src="~/images/logo.png" width="50px" height="50px">
                            <h1 class="__brand-name mx-2" style="margin-bottom: 0">Nông sản Bảo Lâm</h1>
                        </a>
                    </div>

                    <div class="__menu">
                        <div class="__top-nav">
                            <div class="__logo">
                                <a>
                                    <h1>Nông sản Bảo Lâm</h1>
                                </a>
                            </div>
                            <div class="__close">
                                <i class="bx bx-x"></i>
                            </div>
                        </div>

                        <ul class="__nav-list">
                            <li class="__nav-item">
                                <a class="__nav-link" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                            </li>

                            <li class="__nav-item __hoverable" id="hoverable-el">
                                <a class="__nav-link">Sản phẩm</a>
                                <ul class="__sub-menu">
                                    @foreach (CategoryReadDto category in Model.Category)
                                    {
                                        <li><a asp-controller="Product" asp-action="Index" asp-route-category="@category.name">@category.displayName</a></li>
                                    }
                                </ul>
                            </li>

                            <li class="__nav-item">
                                <a class="__nav-link " asp-controller="Account" asp-action="Index">Tài khoản</a>
                            </li>

                            <li class="__nav-item">
                                <a class="__nav-link" asp-controller="Home" asp-action="About">Giới thiệu</a>
                            </li>

                            <li class="__nav-item">
                                <a class="__nav-link icon" asp-controller="Cart" asp-action="Index"><i class="bx bx-shopping-bag"></i></a>
                            </li>
                        </ul>
                    </div>

                    <a class="__cart-icon" asp-controller="Cart" asp-action="Index">
                        <i class="bx bx-shopping-bag"></i>
                    </a>

                    <div class="__hamburger">
                        <i class="bx bx-menu"></i>
                    </div>
                </div>
            </nav>
            <main role="main">
                <div class="container __section">
                    <div>
                        <h1>Sản phẩm đặc trưng</h1>
                        @if(Model.ProductList is not null)
                        {
                            <div class="m-5">
                                <section id="products">
                                    <div class="__product-center">
                                        @if (Model.ProductList.products.Count > 0)
                                        {
                                            @foreach (ProductReadDto product in Model.ProductList.products)
                                            {
                                                <div class="__product">
                                                    <div class="__product-header">
                                                        <img src="@product.thumbnailUri" alt="@product.thumbnailName">

                                                        <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.id">
                                                            <ul class="icons">
                                                                <span><i class='bx bxs-show show-icons'></i></span>
                                                            </ul>
                                                        </a>
                                                    </div>
                                                    <div class="__product-footer">
                                                        <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.id">
                                                            <h3 class="__break-word-dots">@product.name</h3>
                                                        </a>
                                                        <div class="__rating">
                                                        
                                                        @for (int i = 0; i < product.averageRate; i++)
                                                        {
                                                            <i class="bx bxs-star"></i>
                                                        }

                                                        @for (int i = 0; i < 5 - product.averageRate; i++)
                                                        {
                                                            <i class="bx bx-star"></i>
                                                        }

                                                        </div>

                                                        <h4 class="__price">@(product.prices.ToString("#,###", System.Globalization.CultureInfo.GetCultureInfo("vi-VN")))đ</h4>

                                                    </div>
                                                </div>
                                            }
                                        }
                                    </div>

                                    @if (Model.ProductList.totalPage > 1)
                                    {
                                        <div class="__pagination">
                                            <div class="">

                                                @if (Model.ProductList.currentPage != 1)
                                                {
                                                    @*Left arrow*@
                                                    <a asp-controller="Product" asp-action="Featured" asp-route-page="@(Model.ProductList.currentPage - 1)" class="btn shadow-none p-0">
                                                        <span>
                                                            <i class='bx bx-left-arrow-alt'></i>
                                                        </span>
                                                    </a>            
                                                }

                                                @{
                                                    double rank = (double)Model.ProductList.currentPage / 5;
                                                    var from = -2;
                                                    var to = 2;

                                                    if (rank == 0.2)
                                                    {
                                                        from = 0;
                                                        to = 4;
                                                    }
                                                    else if (rank == 0.4)
                                                    {
                                                        from = -1;
                                                        to = 3;
                                                    }

                                                    for(var i = from; i <= to; i++)
                                                    {
                                                        @if (Model.ProductList.totalPage != 1)
                                                        {
                                                            var pageNumber = i + (rank * 5);
                                                            if (pageNumber - 1 == Model.ProductList.totalPage) break;

                                                            <a class="btn shadow-none p-0 @(pageNumber == Model.ProductList.currentPage ? "disabled" : "")" asp-controller="Product" asp-action="Featured" asp-route-page="@pageNumber">
                                                                <span>
                                                                    @pageNumber
                                                                </span>
                                                            </a>
                                                        }
                                                    }
                                                }

                                                @if (Model.ProductList.currentPage != Model.ProductList.totalPage && Model.ProductList.totalPage > 0)
                                                {
                                                    @*Right arrow*@
                                                    <a class="btn shadow-none p-0" asp-controller="Product" asp-action="Featured" asp-route-page="@(Model.ProductList.currentPage + 1)">
                                                        <span>
                                                            <i class='bx bx-right-arrow-alt'></i>
                                                        </span>
                                                    </a>
                                                }
                                            </div>
                                        </div>
                                    }
                                </section>
                            </div>
                        }
                    </div>
                </div>
            </main>
        </div>

        <!-- Footer -->
        <footer id="footer" class="__section __footer">
            <div class="__footer-center h-100 d-flex justify-content-center align-items-center">
                Copyright © NSBL | Develop by Diec Lu Chi Vi
            </div>
        </footer>
        <!-- End Footer -->
    </div>
</body>
</html>